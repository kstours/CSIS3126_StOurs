<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="134dp">

        <TextView
            android:id="@+id/textEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:text="@string/EventName"
            app:layout_constraintStart_toEndOf="@+id/imageEventPic"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageEventPic"
            android:layout_width="111dp"
            android:layout_height="102dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            app:layout_constraintEnd_toStartOf="@+id/textEventName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textEventDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="26dp"
            android:text="@string/EventDescrip"
            app:layout_constraintStart_toEndOf="@+id/imageEventPic"
            app:layout_constraintTop_toBottomOf="@+id/textEventName" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>